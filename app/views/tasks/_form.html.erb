<%= form_for(@task) do |f| %>
  <%= form_error_messages(@task) %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :priority %>
    <%= f.select :priority, priority_options, {include_blank: true}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, class: 'form-control' %>
  </div>
  

  <%= f.submit "Save", class: 'btn btn-default' %>
<% end %>
