<%= form_for(@task) do |f| %>
  <%= form_error_messages(@task) %>
  
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Task name' %>
    </div>
  
    <div class="form-group col-md-2">
      <%= f.label :priority, class: 'sr-only' %>
      <%= f.select :priority, priority_options.invert, {include_blank: true}, {class: 'form-control'} %>
    </div>
  
    <div class="form-group col-md-3">
      <%= f.label :due_date, class: 'sr-only' %>
      <div class="input-group">
        <%= f.datetime_field :due_date, class: 'form-control datepicker', 'data-format' => "DD/MM/YYYY HH:mm", placeholder: 'Due date' %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
      </div>
    </div>
  
    <div class="col-md-1">
      <%= f.submit "Save", class: 'btn btn-primary' %>
    </div>
  </div>
  
<% end %>
