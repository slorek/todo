<% if flash.any? %>
  <div class="container">
    <% flash.each do |type, message| %>
      <% bootstrap_class = {
        success: 'alert-success',
        notice: 'alert-info',
        alert: 'alert-warning',
        error: 'alert-danger'
      }[type] || type.to_s %>

      <div class="alert <%= bootstrap_class %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>